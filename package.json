{
  "name": "oxc-loader",
  "type": "module",
  "version": "0.0.1",
  "description": "webpack/Rspack loader for Oxc",
  "author": "Sunny-117",
  "license": "MIT",
  "homepage": "https://github.com/Sunny-117/oxc-loader#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Sunny-117/oxc-loader.git"
  },
  "bugs": "https://github.com/Sunny-117/oxc-loader/issues",
  "keywords": [],
  "sideEffects": false,
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    }
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "typesVersions": {
    "*": {
      "*": [
        "./dist/*",
        "./dist/index.d.ts"
      ]
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "robuild",
    "dev": "robuild --watch",
    "lint": "eslint .",
    "prepublishOnly": "nr build",
    "release": "bumpp && npm publish",
    "start": "esno src/index.ts",
    "test": "vitest --run",
    "typecheck": "tsc --noEmit",
    "prepare": "simple-git-hooks"
  },
  "dependencies": {
    "get-tsconfig": "^4.13.6",
    "oxc-transform": "^0.114.0"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^7.4.3",
    "@antfu/ni": "^28.2.0",
    "@antfu/utils": "^9.3.0",
    "@types/node": "^25.2.3",
    "@types/webpack": "^5.28.5",
    "bumpp": "^10.4.1",
    "eslint": "^10.0.0",
    "esno": "^4.8.0",
    "lint-staged": "^16.2.7",
    "pnpm": "^10.30.0",
    "rimraf": "^6.1.3",
    "robuild": "^0.1.3",
    "simple-git-hooks": "^2.13.1",
    "typescript": "^5.9.3",
    "vite": "^7.3.1",
    "vitest": "^4.0.18",
    "webpack": "^5.105.2"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*": "eslint --fix"
  }
}
